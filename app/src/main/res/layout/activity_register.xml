<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif-medium"
            android:text="Register to UniSO"
            android:textColor="#009688"
            android:textSize="35sp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/textView2"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="University Supply Office"
            android:textColor="#009688"
            android:textSize="20sp"
            android:layout_gravity="center" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/rNameLayout"
            android:layout_width="300dp"
            android:layout_height="68dp"
            android:layout_marginTop="50dp"
            android:hint="Name"
            android:textColorHint="#065009"
            android:layout_gravity="center"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:id="@+id/editRName"
                android:layout_height="60dp"
                android:inputType="textPersonName"
                android:textColor="#065009"
                android:textSize="20sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/RContactLayout"
            android:layout_width="300dp"
            android:layout_height="68dp"
            android:layout_marginTop="5dp"
            android:hint="Contact No."
            android:textColorHint="#065009"
            android:layout_gravity="center"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:id="@+id/editRContact"
                android:layout_height="60dp"
                android:inputType="textPhonetic"
                android:textColor="#065009"
                android:textSize="20sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/rdepartmentLayout"
            android:layout_width="300dp"
            android:layout_height="68dp"
            android:layout_marginTop="10dp"
            android:hint="Department"
            android:textColorHint="#065009"
            android:layout_gravity="center"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:textSize="20sp"
                android:textColor="#065009"
                android:id="@+id/editDep"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/staffEmailLayout"
            android:layout_width="300dp"
            android:layout_height="68dp"
            android:layout_marginTop="5dp"
            android:hint="Email"
            android:textColorHint="#065009"
            android:layout_gravity="center"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:id="@+id/staffEmail"
                android:layout_height="60dp"
                android:inputType="textEmailAddress"
                android:textColor="#065009"
                android:textSize="20sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordLayout"
            android:layout_width="300dp"
            android:layout_height="68dp"
            android:layout_marginTop="5dp"
            android:hint="Password"
            android:textColorHint="#065009"
            android:layout_gravity="center"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:id="@+id/password"
                android:inputType="textPassword"
                android:textColor="#065009"
                android:textSize="20sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:visibility="invisible" />

        <Button
            android:id="@+id/register"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="0dp"
            android:fontFamily="sans-serif-black"
            android:text="REGISTER"
            app:backgroundTint="#009688"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/logintxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Already have account? Login."
            android:textColor="#F65A4F"
            android:textSize="18sp"
            android:layout_gravity="center"/>


    </LinearLayout>
</ScrollView>
