<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="@drawable/uniso_icon">
        </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/rIDLayout"
            android:layout_width="300dp"
            android:layout_height="68dp"
            android:layout_marginTop="15dp"
            android:hint="Staff ID"
            android:textColorHint="#065009"
            android:layout_gravity="center"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:id="@+id/editRID"
                android:layout_height="60dp"
                android:inputType="textPersonName"
                android:textColor="#065009"
                android:textSize="20sp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/rNameLayout"
            android:layout_width="300dp"
            android:layout_height="68dp"
            android:layout_marginTop="5dp"
            android:hint="Name"
            android:textColorHint="#065009"
            android:layout_gravity="center"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:id="@+id/editRName"
                android:layout_height="60dp"
                android:inputType="textPersonName"
                android:textColor="#065009"
                android:textSize="20sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/RContactLayout"
            android:layout_width="300dp"
            android:layout_height="68dp"
            android:layout_marginTop="5dp"
            android:hint="Contact No."
            android:textColorHint="#065009"
            android:layout_gravity="center"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:id="@+id/editRContact"
                android:layout_height="60dp"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="#065009"
                android:textSize="20sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/staffEmailLayout"
            android:layout_width="300dp"
            android:layout_height="68dp"
            android:layout_marginTop="5dp"
            android:hint="Email"
            android:textColorHint="#065009"
            android:layout_gravity="center"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:id="@+id/staffEmail"
                android:layout_height="60dp"
                android:inputType="textEmailAddress"
                android:textColor="#065009"
                android:textSize="20sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordLayout"
            android:layout_width="300dp"
            android:layout_height="68dp"
            android:layout_marginTop="5dp"
            android:hint="Password"
            android:textColorHint="#065009"
            android:layout_gravity="center"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:id="@+id/password"
                android:inputType="textPassword"
                android:textColor="#065009"
                android:textSize="20sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:visibility="invisible"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/register"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="1dp"
            android:fontFamily="sans-serif-black"
            android:text="REGISTER"
            app:backgroundTint="#009688"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/logintxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Already have verified account? Login."
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_gravity="center"/>


    </LinearLayout>
</ScrollView>
