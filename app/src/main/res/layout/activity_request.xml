    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            layout="@layout/main_toolbar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SELECT ITEM(s) to REQUEST"
            android:textSize="29sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#0E5E56"
            android:layout_gravity="center"
            android:layout_margin="5dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:orientation="horizontal">
            <CheckBox
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/c1"
                android:text="A4 Bond Paper"
                android:onClick="check1"/>
            <Button
                android:textSize="20sp"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:onClick="minus1"
                android:id="@+id/min1"
                android:enabled="false"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:text="-"
                android:layout_marginLeft="75dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:id="@+id/q1"
                android:enabled="false"/>
            <Button
                android:textSize="20sp"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:onClick="plus1"
                android:id="@+id/pls1"
                android:enabled="false"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:text="+"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="25dp">
            <CheckBox
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/c2"
                android:text="Projector"
                android:onClick="check2"
                />
            <Button
                android:textSize="20sp"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:onClick="minus2"
                android:id="@+id/min2"
                android:enabled="false"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:text="-"
                android:layout_marginLeft="128dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:id="@+id/q2"
                android:enabled="false"
                android:textColor="@color/black"/>
            <Button
                android:textSize="20sp"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:onClick="plus2"
                android:id="@+id/pls2"
                android:enabled="false"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:text="+"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="25dp">
            <CheckBox
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/c3"
                android:text="Monitor"
                android:onClick="check3"
                />
            <Button
                android:textSize="20sp"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:onClick="minus3"
                android:id="@+id/min3"
                android:enabled="false"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:text="-"
                android:layout_marginLeft="139dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:id="@+id/q3"
                android:enabled="false"
                android:textColor="@color/black"/>
            <Button
                android:textSize="20sp"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:onClick="plus3"
                android:id="@+id/pls3"
                android:enabled="false"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:text="+"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="25dp">
            <CheckBox
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/c4"
                android:text="System Unit"
                android:onClick="check4"
