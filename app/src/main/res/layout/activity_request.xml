        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_itemLayout"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="68dp"
            android:textColorHint="#065009"
            android:layout_gravity="center"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_item"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="#065009"
                android:hint="Not in the choices? Type here..."
                android:textSize="19sp"/>
        </com.google.android.material.textfield.TextInputLayout>
<!--        <TextView-->
<!--            android:id="@+id/item"-->
<!--            android:visibility="gone"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            />-->
<!--        <TextView-->
<!--            android:id="@+id/delivery"-->
<!--            android:visibility="gone"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            />-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="25sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#0E5E56"
            android:text="Delivery Options:"
            android:layout_gravity="center"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_margin="15dp"
        android:orientation="horizontal">
        <CheckBox
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/c7"
            android:onClick="Check7"
            android:text="Delivers by Staff"
            />
        <CheckBox
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/c8"
            android:onClick="Check8"
            android:text="Take it by self"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="BACK"
            app:backgroundTint="#009688"
            android:onClick="back" />
        <Button
            android:id="@+id/btn_submit"
            android:onClick="submit"
            android:layout_width="150dp"
            app:backgroundTint="#009688"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>

</LinearLayout>
</ScrollView>
<RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white">
        <include
        layout="@layout/main_nav_drawer"/>
</RelativeLayout>

