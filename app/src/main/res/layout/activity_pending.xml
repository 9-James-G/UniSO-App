<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pending">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:textSize="27sp"
            android:text="YOUR PENDING REQUEST.."
            android:fontFamily="sans-serif-medium"
            android:textColor="#0E5E56"
            />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#0E5E56"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/tv2"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Please wait a moment. We will contact you as soon as possible whether your request is approved or not."
            android:textColor="#0E5E56"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ITEM RECEIVED"/>
        <Button
            android:id="@+id/logOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="LOGOUT"/>
    </LinearLayout>
    </LinearLayout>

</ScrollView>